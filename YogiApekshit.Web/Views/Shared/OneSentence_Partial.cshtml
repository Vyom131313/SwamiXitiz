@using Mvc.Core.ThirdParty
@using YogiApekshit.Web.Models
@using SwamiXitiz.Data.ModelsPartial

@model QA_Filter_Parameters

@{var gridId = "gridOneSentence";}
<div class="page page-dashboard">

    <section class="tile bg-greensea">
        @Html.Partial("GridToolbar", new GridToolbarModel
       {
           GridId = gridId,
           Title = @"Answer ALL of the following, using one sentence (not just one word) for each answer.",
           SubTitle = "(Total Marks: 4)"
       })

        @(Html.ICon().Grid(gridId)
             .Url(Url.Action("GridRecords", "QA"))
            .Parameter("bookId", Model.BookId.ToString())
            .Parameter("category", Constants.Que_Categories.OneSentence.ToString())
            .Parameter("chapterNumber", Model.ChapterNumber.ToString())
            .Persistence(Persistence.Session)
            .Groupable(false)
            .Sortable(false)

            .Columns(
                new Column { Name = "Sr", Header = "#", Width = 40, },
                new Column { ClientFormat = Utils.QuestionAndAnsFormat(), Header = "Question and Answer" },
                new Column { Name = "Chapter", Header = "Chapter", Width = 90 },
                new Column { Name = "Exams", Header = "Exams", Width = 130 }
                ))
    </section>
</div>