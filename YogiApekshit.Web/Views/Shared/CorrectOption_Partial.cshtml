@using Mvc.Core.ThirdParty
@using YogiApekshit.Web.Models
@using SwamiXitiz.Data.ModelsPartial
@model QA_Filter_Parameters

@{var gridId = string.Format("grid{0}", Constants.Que_Categories.Correct_Option.ToString());}

<div class="page page-dashboard">
    <section class="tile bg-blue" id="@string.Format("div{0}", gridId)">
        @Html.Partial("GridToolbar", new GridToolbarModel { Title = "From the given options, place a tick (✔) in the box next to the correct ones.", SubTitle = "(Total Marks: 8)" })
        @(Html.ICon().Grid(gridId).ClientKey(gridId)
            .Url(Url.Action("GridRecords", "QA"))

            .Parameter("bookId", Model.BookId.ToString())
            .Parameter("category", Constants.Que_Categories.Correct_Option.ToString())
            .Parameter("chapterNumber", Model.ChapterNumber.ToString())
            .Persistence(Persistence.Session)
            .Groupable(false)
            .Sortable(false)
            .Columns(
                new Column { Name = "Sr", Header = "Sr.", Width = 40 },
                new Column { Name = "Que", Header = "Topic", Width = 300 },
                new Column { Name = "Ans", Header = "Correct Options", ClientFormat = Utils.CorrectOptionFormat(gridId) + Utils.CheckAnswerButton(gridId) },
                new Column { Name = "Chapter", Header = "Chapter", Width = 90 },
                new Column { Name = "Exams", Header = "Exams", Width = 130 }
                ))
    </section>
</div>

