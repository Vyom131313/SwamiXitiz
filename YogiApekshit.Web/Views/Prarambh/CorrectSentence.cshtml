@using YogiApekshit.Web.Models
@using SwamiXitiz.Data.ModelsPartial
@using Mvc.Core.ThirdParty
@using YogiApekshit.Web.Models
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page page-dashboard">
    @Html.Partial("BreadcrumbPartial", new BreadcrumbAndTitleModel("Incorrect Sentences"))
    <section class="tile bg-greensea">
        @Html.Partial("GridToolbar", new GridToolbarModel { Title = "Rewrite the incorrect sentences below in relation to the sentence heading.", SubTitle = "(Total Marks: 4)" })
        <div ng-controller="PrarambhController">
            <span>{{QA_List_Load('@Constants.Que_Categories.CorrectSentence')}}</span>
            <table class="table table-condensed queAnsTable">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Title and Correct sentence</th>
                        <th>Chapter</th>
                        <th>Exams</th>
                    </tr>
                </thead>
                <tbody>
                    <tr data-ng-repeat="item in QA_List">
                        <td class="sequenceColumn">{{item.Sr}}.</td>
                        <td class="queAndansColumn">
                            <p style="line-height:1.7">
                                <b>{{item.Title}}</b> <br />
                                <b style="text-decoration:underline">Correct:</b> {{item.Correct}}
                            </p>
                        </td>
                        <td class="chapterColumn">{{item.Chapter}}</td>
                        <td class="examColumn">{{item.Exams}}</td>
                        <td></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </section>
</div>

@section scripts{
}